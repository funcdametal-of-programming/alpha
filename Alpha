#include <iostream>

using namespace std;

int main()
{
int n=1;
cout<<"\t\t__________PRINT NUMBER IN PATTERN__________\t\t\n";
cout<<"enter number of rows: ";
cin>>n;// accepts number of rows
cout<<endl;

//iterates from n to 1
for(int i=n;i>=1;i--)
{
//prints spaces to align the numbers in the pyramid
  for(int j=n-i;j>0;j--)
  cout<<"  ";
 // prints the numbers in ascending order
  for(int k=0;k<=i;k++)
  cout<<k<<" ";
 // prints the numbers in descending order.
  for(int m=i-1;m>=0;m--)
  {
      cout<<m<<" ";
      }
      //prints a newline character to move to the next row of the pyramid.
  cout<<endl;
}

// iterates from 0 to n
for(int i=0;i<=n;i++)
{
//prints spaces to align the numbers in the pyramid
    for(int x=n-i;x>0;x--)
    cout<<"  ";
   // prints the numbers in ascending order
    for(int y=0;y<=i;y++)
    cout<<y<<" ";
    //prints the numbers in descending order.
    for(int z=i-1;z>=0;z--)
    {cout<<z<<" ";}
   // prints a newline character to move to the next row of the pyramid.
    cout<<endl;
}
    return 0;
}
